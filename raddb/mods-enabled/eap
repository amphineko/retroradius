eap {
	default_eap_type = tls
	timer_expire = 60
	max_sessions = ${max_requests}

	tls-config tls-common {
		private_key_file = ${certdir}/server/server-key.pem
		certificate_file = ${certdir}/server/server.pem

		ca_path = ${certdir}/ca
		ca_file = ${cadir}/ca/ca.pem

		auto_chain = yes

		cipher_list = "DEFAULT"
		cipher_server_preference = yes

        tls_min_version = "1.2"
        tls_max_version = "1.2"

		
		# ecdh_curve = "prime256v1"
		ecdh_curve = ""

		verify {
		}

		ocsp {
			enable = no
			override_cert_url = no
			url = "http://127.0.0.1/ocsp/"
		}
	}

	tls {
		tls = tls-common
	}

	ttls {
		tls = tls-common
		default_eap_type = mschapv2
		copy_request_to_tunnel = no
		virtual_server = "inner-tunnel-ttls"
	}

	peap {
		tls = tls-common
		default_eap_type = mschapv2
		copy_request_to_tunnel = no
		virtual_server = "inner-tunnel-peap"
	}
	
	mschapv2 {
		send_error = yes
		identity = "radius-server@aqua.futa.moe"
	}
}
